<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- ROOT: If you *do* have a global parent in trakka_ops, you can change parent to that id.
             Otherwise this becomes a top-level "FinOps" menu. -->
  <menuitem id="menu_finops_root" name="FinOps" sequence="80"/>

  <!-- ================== ACTIONS ================== -->
  <record id="action_trakka_escrow" model="ir.actions.act_window">
    <field name="name">Escrows</field>
    <field name="res_model">trakka.payguard.escrow</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create escrow holds linked to Sales Orders.
      </p>
    </field>
  </record>

  <record id="action_trakka_wallet" model="ir.actions.act_window">
    <field name="name">Wallets</field>
    <field name="res_model">trakka.wallet</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Manage seller wallets by partner &amp; currency.
      </p>
    </field>
  </record>

  <record id="action_trakka_wallet_move" model="ir.actions.act_window">
    <field name="name">Wallet Moves</field>
    <field name="res_model">trakka.wallet.move</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
  </record>

  <record id="action_trakka_settlement_batch" model="ir.actions.act_window">
    <field name="name">Settlement Batches</field>
    <field name="res_model">trakka.settlement.batch</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="domain">[]</field>
  </record>

  <!-- ================== MENUS (bound to actions) ================== -->
  <menuitem id="menu_finops_escrows"
            name="Escrows"
            parent="menu_finops_root"
            action="action_trakka_escrow"
            sequence="10"/>

  <menuitem id="menu_finops_wallets"
            name="Wallets"
            parent="menu_finops_root"
            action="action_trakka_wallet"
            sequence="20"/>

  <menuitem id="menu_finops_wallet_moves"
            name="Wallet Moves"
            parent="menu_finops_root"
            action="action_trakka_wallet_move"
            sequence="25"/>

  <menuitem id="menu_finops_settlements"
            name="Settlements"
            parent="menu_finops_root"
            action="action_trakka_settlement_batch"
            sequence="30"/>
</odoo>
