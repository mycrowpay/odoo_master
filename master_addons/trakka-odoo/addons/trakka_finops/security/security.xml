<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- FinOps User -->
  <record id="group_trakka_finops_user" model="res.groups">
    <field name="name">FinOps User</field>
    <field name="category_id" ref="base.module_category_accounting"/>
    <!-- Give basic Sales and Accounting access via implied groups -->
    <field name="implied_ids" eval="[
        (4, ref('sales_team.group_sale_salesman')),
        (4, ref('account.group_account_user'))
    ]"/>
  </record>

  <!-- FinOps Manager -->
  <record id="group_trakka_finops_manager" model="res.groups">
    <field name="name">FinOps Manager</field>
    <field name="category_id" ref="base.module_category_accounting"/>
    <field name="implied_ids" eval="[
        (4, ref('group_trakka_finops_user')),
        (4, ref('sales_team.group_sale_manager')),
        (4, ref('account.group_account_manager'))
    ]"/>
  </record>
</odoo>
