<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Escrow sequence: ESC/2025/09/0001 -->
  <record id="seq_trakka_payguard_escrow" model="ir.sequence">
    <field name="name">Trakka Escrow</field>
    <field name="code">trakka.payguard.escrow</field>
    <field name="prefix">ESC/%(year)s/%(month)s/</field>
    <field name="padding">4</field>
    <field name="company_id" eval="False"/>
    <field name="implementation">no_gap</field>
  </record>

  <!-- (Optional) Settlement Batch sequence: SET/2025/09/0001 -->
  <record id="seq_trakka_settlement_batch" model="ir.sequence">
    <field name="name">Trakka Settlement Batch</field>
    <field name="code">trakka.settlement.batch</field>
    <field name="prefix">SET/%(year)s/%(month)s/</field>
    <field name="padding">4</field>
    <field name="company_id" eval="False"/>
    <field name="implementation">no_gap</field>
  </record>
</odoo>
