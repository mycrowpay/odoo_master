<odoo>
  <record id="ir_cron_trakka_finops_settlement" model="ir.cron">
    <field name="name">Trakka Nightly Settlement</field>
    <field name="model_id" ref="model_trakka_settlement_batch"/>
    <field name="state">code</field>
    <field name="code">model.cron_nightly_settlement()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
    <field name="doall">False</field>
    <!-- Run at ~01:10 local by default -->
    <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1, hour=1, minute=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
  </record>
</odoo>
