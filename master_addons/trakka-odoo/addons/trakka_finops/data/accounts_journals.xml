<odoo noupdate="1">
  <!-- Liability accounts -->
  <record id="acc_trk_escrow_liab" model="account.account">
    <field name="name">Trakka Escrow Liability</field>
    <field name="code">ESC01</field>
    <field name="account_type">liability_current</field>
    <field name="company_id" ref="base.main_company"/>
  </record>

  <record id="acc_trk_wallet_liab" model="account.account">
    <field name="name">Trakka Seller Wallet (Liability)</field>
    <field name="code">WLT01</field>
    <field name="account_type">liability_current</field>
    <field name="company_id" ref="base.main_company"/>
  </record>

  <record id="acc_trk_buyer_payout_liab" model="account.account">
    <field name="name">Trakka Buyer Payout Liability</field>
    <field name="code">BPL01</field>
    <field name="account_type">liability_current</field>
    <field name="company_id" ref="base.main_company"/>
  </record>

  <!-- Revenue account for returns handling -->
  <record id="acc_trk_returns_handling_rev" model="account.account">
    <field name="name">Trakka Returns Handling Revenue</field>
    <field name="code">RHR01</field>
    <field name="account_type">income_other</field>
    <field name="company_id" ref="base.main_company"/>
  </record>

  <!-- Journals (codes must be <= 5 chars and unique per company) -->
  <record id="jrnl_trk_escrow" model="account.journal">
    <field name="name">Escrow Liability</field>
    <field name="code">ESC</field>
    <field name="type">general</field>
    <field name="company_id" ref="base.main_company"/>
    <field name="default_account_id" ref="acc_trk_escrow_liab"/>
  </record>

  <record id="jrnl_trk_wallet" model="account.journal">
    <field name="name">Seller Wallet</field>
    <field name="code">WLT</field>
    <field name="type">general</field>
    <field name="company_id" ref="base.main_company"/>
    <field name="default_account_id" ref="acc_trk_wallet_liab"/>
  </record>

  <record id="jrnl_trk_buyer_payout" model="account.journal">
    <field name="name">Buyer Payout Liability</field>
    <field name="code">BPL</field>
    <field name="type">general</field>
    <field name="company_id" ref="base.main_company"/>
    <field name="default_account_id" ref="acc_trk_buyer_payout_liab"/>
  </record>

  <record id="jrnl_trk_returns_rev" model="account.journal">
    <field name="name">Returns Handling Revenue</field>
    <field name="code">RHR</field>
    <field name="type">general</field>
    <field name="company_id" ref="base.main_company"/>
    <field name="default_account_id" ref="acc_trk_returns_handling_rev"/>
  </record>
</odoo>
