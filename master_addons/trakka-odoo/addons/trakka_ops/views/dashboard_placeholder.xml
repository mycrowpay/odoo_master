<odoo>
  <record id="view_trakka_dashboard_placeholder" model="ir.ui.view">
    <field name="name">trakka.dashboard.placeholder</field>
    <field name="model">ir.actions.act_window</field>
    <field name="arch" type="xml">
      <form string="Trakka Dashboard">
        <sheet>
          <h1>Trakka Console</h1>
          <p>This is a placeholder dashboard. KPIs will be added in Milestone 6.</p>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_trakka_dashboard_placeholder" model="ir.actions.act_window">
    <field name="name">Console</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_trakka_ops_dashboard"
            parent="menu_trakka_ops_dash_root"
            action="action_trakka_dashboard_placeholder"
            sequence="1"/>
</odoo>
