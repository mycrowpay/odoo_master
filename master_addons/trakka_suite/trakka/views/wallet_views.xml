<odoo>
  <record id="action_trakka_wallets" model="ir.actions.act_window">
    <field name="name">Wallets</field>
    <field name="res_model">trakka.wallet</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="menu_trakka_wallets" parent="menu_trakka_finops_root" action="action_trakka_wallets" sequence="20"/>

  <record id="view_trakka_wallet_tree" model="ir.ui.view">
    <field name="name">trakka.wallet.tree</field>
    <field name="model">trakka.wallet</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="company_id"/>
        <field name="balance"/>
      </tree>
    </field>
  </record>

  <record id="view_trakka_wallet_form" model="ir.ui.view">
    <field name="name">trakka.wallet.form</field>
    <field name="model">trakka.wallet</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="company_id"/>
            <field name="balance" readonly="1"/>
            <field name="move_ids">
              <tree editable="bottom">
                <field name="date"/>
                <field name="direction"/>
                <field name="amount"/>
                <field name="ref"/>
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
