<odoo>
  <data noupdate="1">

    <!-- SAFE defaults (ok to reset on upgrade) -->
    <function model="ir.config_parameter" name="set_param">
      <value eval="'trakka.mpesa.mode'"/>
      <value eval="'dummy'"/>
    </function>

    <function model="ir.config_parameter" name="set_param">
      <value eval="'trakka.mpesa.env'"/>
      <value eval="'sandbox'"/>
    </function>

    <function model="ir.config_parameter" name="set_param">
      <value eval="'trakka.mpesa.account_ref'"/>
      <value eval="'TRAKKA'"/>
    </function>

    <function model="ir.config_parameter" name="set_param">
      <value eval="'trakka.mpesa.trans_desc'"/>
      <value eval="'Order Payment'"/>
    </function>

    <!-- DO NOT set these here (so they persist across upgrades):
         trakka.mpesa.short_code
         trakka.mpesa.passkey
         trakka.mpesa.callback_base
         trakka.mpesa.base_url
         trakka.mpesa.consumer_key
         trakka.mpesa.consumer_secret
         Configure them in Settings → Trakka → M-Pesa.
    -->

  </data>
</odoo>
